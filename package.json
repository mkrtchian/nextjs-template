{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "Template for Next.js projects",
  "homepage": "https://github.com/mkrtchian/nextjs-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkrtchian/nextjs-template.git"
  },
  "keywords": [
    "nextjs",
    "template"
  ],
  "author": "Roman Mkrtchian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkrtchian/nextjs-template/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && touch out/.nojekyll",
    "deploy": "gh-pages -d out -t true",
    "lint": "next lint --max-warnings=0 .",
    "lint:fix": "next lint --fix --max-warnings=0 .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test-all": "yarn type-check && yarn lint && yarn test",
    "prepare": "husky install"
  },
  "dependencies": {
    "cliui": "^9.0.1",
    "next": "15.3.4",
    "react": "^19",
    "react-dom": "^19",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "jest-extended": "^6.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  }
}
